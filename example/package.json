{
  "name": "ts-emeth-example",
  "private": true,
  "version": "1.0.0",
  "description": "CSS Modules cli example",
  "main": "index.js",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "emeth": "^1.0.2",
    "ts-emeth": "^1.3.0",
    "@types/webpack-env": "^1.15.1"
  },
  "scripts": {
    "build": "tse --path=./public/**/*.cssm && tsc",
    "watch": "tse -w -v -path=/public/**/*.cssm && tsc -w",
    "start": "mrbuilder"
  },
  "devDependencies": {
    "@mrbuilder/cli": "^4.4.0",
    "@mrbuilder/plugin-babel-7": "^4.4.0",
    "@mrbuilder/plugin-typescript": "^4.4.0",
    "@mrbuilder/preset-app": "^4.4.0"
  },
  "mrbuilder": {
    "plugins": [
      "ts-emeth",
      [
        "@mrbuilder/plugin-css",
        {
          "modules": "/\\.cssm$/"
        }
      ],
      [
        "@mrbuilder/plugin-typescript",
        {
          "useBabel": true
        }
      ]
    ]
  }
}
